@model Projecto.Models.PeliculaActor

@{
    ViewData["Title"] = "Eliminar Relación Película - Actor";
}

<h1 class="text-danger">@ViewData["Title"]</h1>

<h4 class="mb-3">¿Está seguro de eliminar esta relación?</h4>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PeliculaId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Pelicula.Titulo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Actor)</dt>
            <dd class="col-sm-9">@($"{Model.Actor.Nombre} {Model.Actor.Apellido}")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rol)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>
        </dl>

        <form asp-controller="PeliculasActores" asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="PeliculaId" />
            <input type="hidden" asp-for="ActorId" />
            <div class="d-flex justify-content-start gap-2">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
