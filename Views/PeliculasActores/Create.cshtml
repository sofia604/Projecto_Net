@model Projecto.Models.PeliculaActor

@{
    ViewData["Title"] = "Registrar Pel√≠cula y Actor";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="PeliculaId" class="form-label fw-bold"></label>
                <select asp-for="PeliculaId" class="form-select" asp-items="ViewBag.PeliculaId"></select>
                <span asp-validation-for="PeliculaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
				<label asp-for="ActorId" class="form-label fw-bold"></label>
                <select asp-for="ActorId" class="form-select" asp-items="ViewBag.ActorId"></select>
                <span asp-validation-for="ActorId" class="text-danger"></span>
            </div>

            <div class="mb-3">
				<label asp-for="Rol" class="form-label fw-bold"></label>
                <input asp-for="Rol" class="form-control" />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start gap-2 mt-4">
                <button type="submit" class="btn btn-outline-primary rounded-pill me-2">
                    <i class="bi bi-save me-1"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-outline-danger btn-sm rounded-pill">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
