@model List<Projecto.Models.Pelicula>

@if (Model.Any())
{
    <div class="row">
        @foreach (var pelicula in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@pelicula.ImagenRuta" class="card-img-top" alt="@pelicula.Titulo" style="height: 250px; object-fit: cover;" />
                    <div class="card-body text-center">
                        <a asp-controller="Peliculas" asp-action="Details" asp-route-id="@pelicula.Id" class="fw-semibold text-decoration-none">
                            @pelicula.Titulo
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">Este director aún no tiene películas registradas.</p>
}
