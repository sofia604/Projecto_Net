@model Projecto.Models.Pelicula

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Pel√≠cula</h1>

<hr />
<div class="row">
	<form asp-action="Edit" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id" />

		<div class="row">
			<div class="col-md-7">
				<div class="form-group">
					<label asp-for="Titulo" class="control-label fw-bold"></label>
					<input asp-for="Titulo" class="form-control" />
					<span asp-validation-for="Titulo" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Sinopsis" class="control-label fw-bold"></label>
					<input asp-for="Sinopsis" class="form-control" />
					<span asp-validation-for="Sinopsis" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Duracion" class="control-label fw-bold"></label>
					<input asp-for="Duracion" class="form-control" />
					<span asp-validation-for="Duracion" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="FechaEstreno" class="control-label fw-bold"></label>
					<input asp-for="FechaEstreno" class="form-control" />
					<span asp-validation-for="FechaEstreno" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="GeneroId" class="control-label fw-bold"></label>
					<select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
					<span asp-validation-for="GeneroId" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="DirectorId" class="control-label fw-bold"></label>
					<select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
					<span asp-validation-for="DirectorId" class="text-danger"></span>
				</div>
			</div>

			<div class="col-md-5">
				@if (!string.IsNullOrEmpty(Model.ImagenRuta))
				{
					<div class="mb-3">
						<label><strong>Portada actual</strong></label><br />
						<a href="@Model.ImagenRuta" target="_blank">
							<img src="@Model.ImagenRuta" alt="Portada actual"
								 class="img-thumbnail" style="width: 100%; max-width: 200px; cursor: zoom-in;" />
						</a>
					</div>
				}

				<div class="form-group">
					<label class="control-label fw-bold">Cambiar Portada</label>
					<input type="file" asp-for="ImagenPortada" name="ImagenPortada" class="form-control" />
				</div>
			</div>
		</div>

		<div class="form-group mt-3">
			<input type="submit" value="Guardar" class="btn btn-primary" />
			<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
		</div>
	</form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
