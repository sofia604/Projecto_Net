@model Projecto.Models.Comentarios

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nuevo Comentario</h1>

<h4>Comentarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaComentario" class="control-label"></label>
                <input asp-for="FechaComentario" class="form-control" />
                <span asp-validation-for="FechaComentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeliculaId" class="control-label"></label>
                <select asp-for="PeliculaId" class="form-select" asp-items="ViewBag.PeliculaId"></select>
                <span asp-validation-for="PeliculaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-start gap-2 mt-4">
                <button type="submit" class="btn btn-outline-primary rounded-pill me-2">
                    <i class="bi bi-save me-1"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-outline-danger btn-sm rounded-pill">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
